---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Logo from "@/components/Logo.astro";

const basePath = import.meta.env.BASE_URL;
---

<BaseLayout title="404 - Not Found" description="Page not found">
  <div class="error-page">
    <div class="error-content">
      <Logo variant="gray" class="error-logo" />

      <h1 class="error-code">404</h1>
      <p class="error-title">Page Not Found</p>
      <p class="error-description">
        The page you're looking for doesn't exist or has been moved.
      </p>

      <a href={basePath} class="btn btn-primary">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 256 256" fill="currentColor" style="width: 18px; height: 18px;">
          <path d="M224,128a8,8,0,0,1-8,8H59.31l58.35,58.34a8,8,0,0,1-11.32,11.32l-72-72a8,8,0,0,1,0-11.32l72-72a8,8,0,0,1,11.32,11.32L59.31,120H216A8,8,0,0,1,224,128Z" />
        </svg>
        Back to Home
      </a>
    </div>
  </div>
</BaseLayout>

<style>
  .error-page {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 32px;
    background: var(--bg-dark);
  }

  .error-content {
    text-align: center;
    max-width: 400px;
  }

  .error-logo {
    height: 48px;
    width: auto;
    margin-bottom: 48px;
    opacity: 0.3;
  }

  .error-code {
    font-family: var(--font-mono);
    font-size: 6rem;
    font-weight: 700;
    color: var(--primary);
    line-height: 1;
    margin-bottom: 16px;
  }

  .error-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 8px;
  }

  .error-description {
    font-size: 1rem;
    color: var(--text-muted);
    margin-bottom: 32px;
  }
</style>
