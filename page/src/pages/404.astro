---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Button from "@/components/ui/Button.astro";

const basePath = import.meta.env.BASE_URL;
---

<BaseLayout title="Page Not Found" description="The page you're looking for doesn't exist.">
  <main class="flex items-center justify-center min-h-screen p-6 bg-base-100">
    <div class="card glass p-8 max-w-md text-center">
      <div class="avatar placeholder mx-auto mb-6">
        <div class="bg-error text-error-content rounded-full w-16 h-16">
          <svg class="w-8 h-8" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z"/>
          </svg>
        </div>
      </div>
      <h1 class="text-4xl font-bold mb-2">404</h1>
      <p class="text-xl opacity-80 mb-6">Page not found</p>
      <p class="opacity-60 mb-8">
        The page you're looking for doesn't exist or has been moved.
      </p>
      <Button href={basePath} variant="primary">
        <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
          <polyline points="9 22 9 12 15 12 15 22"/>
        </svg>
        Back to Home
      </Button>
    </div>
  </main>
</BaseLayout>
