---
// All-in-One Template Detail Component
// Populated dynamically via JavaScript
---

<article id="template-detail" class="hidden space-y-6">
  <!-- Back Button -->
  <button class="btn btn-ghost btn-sm gap-2" id="back-to-list">
    <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M19 12H5M12 19l-7-7 7-7"/>
    </svg>
    Back to Templates
  </button>

  <!-- Header: Icon + Name + Badges -->
  <div class="flex items-center gap-4">
    <div class="avatar placeholder">
      <div class="bg-base-300 rounded-xl w-20 p-3">
        <img
          id="detail-icon"
          alt=""
          class="w-full h-full"
          onerror="this.style.display='none';this.nextElementSibling.style.display='block'"
        />
        <svg class="w-full h-full opacity-50" style="display:none" viewBox="0 0 24 24" fill="currentColor">
          <path d="M20 6h-8l-2-2H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V8c0-1.1-.9-2-2-2zm-1 12H5c-.55 0-1-.45-1-1V9c0-.55.45-1 1-1h14c.55 0 1 .45 1 1v8c0 .55-.45 1-1 1z"/>
        </svg>
      </div>
    </div>
    <div>
      <h1 id="detail-name" class="text-3xl font-bold"></h1>
      <div id="detail-badges" class="flex flex-wrap gap-2 mt-2"></div>
    </div>
  </div>

  <!-- Description -->
  <p id="detail-description" class="text-lg opacity-80"></p>

  <!-- Two Column Layout -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Main Column (2/3) -->
    <div class="lg:col-span-2 space-y-6 min-w-0">
      <!-- Download Card -->
      <div id="detail-download-section" class="card card-border bg-base-200">
        <div class="card-body">
          <h2 class="card-title">Download</h2>
          <a id="detail-download-btn" class="btn btn-primary btn-lg gap-2" download>
            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
              <path d="M19 9h-4V3H9v6H5l7 7 7-7zM5 18v2h14v-2H5z"/>
            </svg>
            Download Template
          </a>
          <div class="join w-full mt-4">
            <input id="detail-wget" type="text" readonly class="input input-sm join-item flex-1 font-mono text-xs" />
            <button id="detail-wget-copy" class="btn btn-sm btn-neutral join-item" title="Copy to clipboard">
              <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
                <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
              </svg>
            </button>
          </div>
          <p id="detail-sha512" class="text-xs opacity-50 font-mono break-all mt-2"></p>
        </div>
      </div>

      <!-- Quick Start -->
      <div id="detail-quickstart-section" class="card card-border hidden">
        <div class="card-body">
          <h2 class="card-title">Quick Start</h2>
          <div id="detail-quickstart" class="mockup-code text-sm"></div>
        </div>
      </div>

      <!-- FAQ: DaisyUI Accordion -->
      <div id="detail-faq-section" class="space-y-2 hidden">
        <h2 class="text-xl font-semibold">FAQ</h2>
        <div id="detail-faq"></div>
      </div>

      <!-- Changelog: Collapsible -->
      <div id="detail-changelog-section" class="collapse collapse-arrow bg-base-200 hidden">
        <input type="checkbox" />
        <div class="collapse-title font-medium">Changelog</div>
        <div id="detail-changelog" class="collapse-content prose prose-sm max-w-none"></div>
      </div>
    </div>

    <!-- Sidebar Column (1/3) -->
    <div class="lg:col-span-1 space-y-6 lg:sticky lg:top-6 lg:self-start">
      <!-- Resources: DaisyUI Stats -->
      <div id="detail-resources" class="stats stats-vertical shadow w-full"></div>

      <!-- Ports -->
      <div id="detail-ports-section" class="card card-border card-sm hidden">
        <div class="card-body">
          <h3 class="card-title text-sm">Ports</h3>
          <div class="overflow-x-auto">
            <table class="table table-xs">
              <tbody id="detail-ports"></tbody>
            </table>
          </div>
        </div>
      </div>

      <!-- Paths -->
      <div id="detail-paths-section" class="card card-border card-sm hidden">
        <div class="card-body">
          <h3 class="card-title text-sm">Important Paths</h3>
          <div class="overflow-x-auto">
            <table class="table table-xs">
              <tbody id="detail-paths"></tbody>
            </table>
          </div>
        </div>
      </div>

      <!-- Credentials Alert -->
      <div id="detail-credentials-section" role="alert" class="alert alert-warning hidden">
        <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z"/>
        </svg>
        <div>
          <h3 class="font-bold">Default Credentials</h3>
          <div id="detail-credentials" class="text-sm"></div>
        </div>
      </div>

      <!-- Release Info -->
      <div id="detail-release-section" class="text-sm opacity-60 space-y-1 hidden">
        <p id="detail-release-date"></p>
        <p>
          <a id="detail-github-link" class="link link-primary" target="_blank" rel="noopener noreferrer">
            View on GitHub â†’
          </a>
        </p>
      </div>
    </div>
  </div>
</article>
