---
interface Port {
  port: number;
  description: string;
}

interface Props {
  ports: Port[];
}

const { ports } = Astro.props;
---

{ports && ports.length > 0 && (
  <div class="card bg-base-100">
    <div class="card-body p-0">
      <div class="px-4 py-3 border-b border-base-300 bg-base-200">
        <h3 class="card-title text-base">
          <svg class="w-4 h-4 text-primary" viewBox="0 0 24 24" fill="currentColor">
            <path d="M15 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V9l-6-6zm3 16H6c-.55 0-1-.45-1-1V6c0-.55.45-1 1-1h8v5h5v8c0 .55-.45 1-1 1z"/>
          </svg>
          Exposed Ports
        </h3>
      </div>
      <div class="overflow-x-auto">
        <table class="table table-zebra">
          <thead>
            <tr>
              <th>Port</th>
              <th>Description</th>
            </tr>
          </thead>
          <tbody>
            {ports.map((port) => (
              <tr>
                <td>
                  <kbd class="kbd kbd-sm">{port.port}</kbd>
                </td>
                <td>{port.description}</td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </div>
  </div>
)}
