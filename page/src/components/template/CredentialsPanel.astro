---
interface Props {
  username: string;
  password: string;
  note?: string;
}

const { username, password, note } = Astro.props;
---

<div class="card bg-base-100">
  <div class="card-body p-0">
    <div class="px-4 py-3 border-b border-base-300 bg-base-200">
      <h3 class="card-title text-base">
        <svg class="w-4 h-4 text-primary" viewBox="0 0 24 24" fill="currentColor">
          <path d="M18 8h-1V6c0-2.76-2.24-5-5-5S7 3.24 7 6v2H6c-1.1 0-2 .9-2 2v10c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V10c0-1.1-.9-2-2-2zM9 6c0-1.66 1.34-3 3-3s3 1.34 3 3v2H9V6zm9 14H6V10h12v10zm-6-3c1.1 0 2-.9 2-2s-.9-2-2-2-2 .9-2 2 .9 2 2 2z"/>
        </svg>
        Default Credentials
      </h3>
    </div>

    <div class="p-4 space-y-4">
      <div class="grid grid-cols-2 gap-4">
        <div class="form-control">
          <label class="label">
            <span class="label-text text-xs">Username</span>
          </label>
          <kbd class="kbd kbd-lg w-full justify-start">{username}</kbd>
        </div>
        <div class="form-control">
          <label class="label">
            <span class="label-text text-xs">Password</span>
          </label>
          <kbd class="kbd kbd-lg w-full justify-start">{password}</kbd>
        </div>
      </div>

      <div class="alert alert-warning">
        <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
          <path d="M1 21h22L12 2 1 21zm12-3h-2v-2h2v2zm0-4h-2v-4h2v4z"/>
        </svg>
        <span>{note || "Change these credentials immediately after first login!"}</span>
      </div>
    </div>
  </div>
</div>
