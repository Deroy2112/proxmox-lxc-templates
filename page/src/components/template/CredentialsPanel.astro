---
import Card from "@/components/ui/Card.astro";
import Alert from "@/components/ui/Alert.astro";

interface Props {
  username: string;
  password: string;
  note?: string;
}

const { username, password, note } = Astro.props;
---

<Card hover={false} class="p-0 overflow-hidden">
  <div class="px-4 py-3 border-b border-[var(--border-color)] bg-[var(--bg-tertiary)]/50">
    <h3 class="font-semibold text-[var(--text-primary)] flex items-center gap-2">
      <svg class="w-4 h-4 text-[var(--color-accent)]" viewBox="0 0 24 24" fill="currentColor">
        <path d="M18 8h-1V6c0-2.76-2.24-5-5-5S7 3.24 7 6v2H6c-1.1 0-2 .9-2 2v10c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V10c0-1.1-.9-2-2-2zM9 6c0-1.66 1.34-3 3-3s3 1.34 3 3v2H9V6zm9 14H6V10h12v10zm-6-3c1.1 0 2-.9 2-2s-.9-2-2-2-2 .9-2 2 .9 2 2 2z"/>
      </svg>
      Default Credentials
    </h3>
  </div>
  <div class="p-4 space-y-4">
    <div class="grid grid-cols-2 gap-4">
      <div>
        <label class="block text-xs font-medium text-[var(--text-muted)] mb-1">Username</label>
        <code class="block px-3 py-2 rounded bg-[var(--bg-tertiary)] text-[var(--text-primary)] font-mono text-sm">
          {username}
        </code>
      </div>
      <div>
        <label class="block text-xs font-medium text-[var(--text-muted)] mb-1">Password</label>
        <code class="block px-3 py-2 rounded bg-[var(--bg-tertiary)] text-[var(--text-primary)] font-mono text-sm">
          {password}
        </code>
      </div>
    </div>

    {note ? (
      <Alert type="warning" size="sm">
        {note}
      </Alert>
    ) : (
      <Alert type="warning" size="sm">
        Change these credentials immediately after first login!
      </Alert>
    )}
  </div>
</Card>
