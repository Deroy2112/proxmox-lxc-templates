---
interface Props {
  memory_min: number;
  memory_recommended: number;
  disk_min: string;
  disk_recommended: string;
  cores: number;
}

const { memory_min, memory_recommended, disk_min, disk_recommended, cores } = Astro.props;
---

<div class="card bg-base-100">
  <div class="card-body p-0">
    <div class="px-4 py-3 border-b border-base-300 bg-base-200">
      <h3 class="card-title text-base">
        <svg class="w-4 h-4 text-primary" viewBox="0 0 24 24" fill="currentColor">
          <path d="M15 9H9v6h6V9zm-2 4h-2v-2h2v2zm8-2V9h-2V7c0-1.1-.9-2-2-2h-2V3h-2v2h-2V3H9v2H7c-1.1 0-2 .9-2 2v2H3v2h2v2H3v2h2v2c0 1.1.9 2 2 2h2v2h2v-2h2v2h2v-2h2c1.1 0 2-.9 2-2v-2h2v-2h-2v-2h2zm-4 6H7V7h10v10z"/>
        </svg>
        System Requirements
      </h3>
    </div>

    <div class="stats stats-vertical w-full">
      <div class="stat">
        <div class="stat-title">Memory</div>
        <div class="stat-value text-lg">{memory_min} - {memory_recommended} MB</div>
        <div class="stat-desc">min - recommended</div>
      </div>

      <div class="stat">
        <div class="stat-title">Disk Space</div>
        <div class="stat-value text-lg">{disk_min} - {disk_recommended}</div>
        <div class="stat-desc">min - recommended</div>
      </div>

      <div class="stat">
        <div class="stat-title">CPU Cores</div>
        <div class="stat-value text-lg">{cores}</div>
        <div class="stat-desc">core{cores > 1 ? 's' : ''}</div>
      </div>
    </div>
  </div>
</div>
