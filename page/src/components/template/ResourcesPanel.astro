---
import Card from "@/components/ui/Card.astro";

interface Props {
  memory_min: number;
  memory_recommended: number;
  disk_min: string;
  disk_recommended: string;
  cores: number;
}

const { memory_min, memory_recommended, disk_min, disk_recommended, cores } = Astro.props;
---

<Card hover={false} class="p-0 overflow-hidden">
  <div class="px-4 py-3 border-b border-[var(--border-color)] bg-[var(--bg-tertiary)]/50">
    <h3 class="font-semibold text-[var(--text-primary)] flex items-center gap-2">
      <svg class="w-4 h-4 text-[var(--color-accent)]" viewBox="0 0 24 24" fill="currentColor">
        <path d="M15 9H9v6h6V9zm-2 4h-2v-2h2v2zm8-2V9h-2V7c0-1.1-.9-2-2-2h-2V3h-2v2h-2V3H9v2H7c-1.1 0-2 .9-2 2v2H3v2h2v2H3v2h2v2c0 1.1.9 2 2 2h2v2h2v-2h2v2h2v-2h2c1.1 0 2-.9 2-2v-2h2v-2h-2v-2h2zm-4 6H7V7h10v10z"/>
      </svg>
      System Requirements
    </h3>
  </div>
  <div class="p-4 space-y-4">
    <!-- Memory -->
    <div>
      <div class="flex items-center justify-between mb-1">
        <span class="text-sm text-[var(--text-muted)]">Memory</span>
      </div>
      <div class="flex items-baseline gap-2">
        <span class="text-lg font-semibold text-[var(--text-primary)]">{memory_min} MB</span>
        <span class="text-sm text-[var(--text-muted)]">min</span>
        <span class="text-[var(--text-faint)]">|</span>
        <span class="text-lg font-semibold text-[var(--text-primary)]">{memory_recommended} MB</span>
        <span class="text-sm text-[var(--text-muted)]">recommended</span>
      </div>
    </div>

    <!-- Disk -->
    <div>
      <div class="flex items-center justify-between mb-1">
        <span class="text-sm text-[var(--text-muted)]">Disk Space</span>
      </div>
      <div class="flex items-baseline gap-2">
        <span class="text-lg font-semibold text-[var(--text-primary)]">{disk_min}</span>
        <span class="text-sm text-[var(--text-muted)]">min</span>
        <span class="text-[var(--text-faint)]">|</span>
        <span class="text-lg font-semibold text-[var(--text-primary)]">{disk_recommended}</span>
        <span class="text-sm text-[var(--text-muted)]">recommended</span>
      </div>
    </div>

    <!-- CPU -->
    <div>
      <div class="flex items-center justify-between mb-1">
        <span class="text-sm text-[var(--text-muted)]">CPU Cores</span>
      </div>
      <div class="flex items-baseline gap-2">
        <span class="text-lg font-semibold text-[var(--text-primary)]">{cores}</span>
        <span class="text-sm text-[var(--text-muted)]">core{cores > 1 ? 's' : ''}</span>
      </div>
    </div>
  </div>
</Card>
