---
interface Props {
  name: string;
  description: string;
  category: string;
  icon: string;
  version: string;
  build_version: number;
  base_os: string;
  memory_min: number;
  disk_min: string;
  cores: number;
  index?: number;
  templateData: string;
}

const {
  name,
  description,
  category,
  icon,
  version,
  build_version,
  base_os,
  memory_min,
  disk_min,
  cores,
  index = 0,
  templateData,
} = Astro.props;

const iconUrl = `https://cdn.jsdelivr.net/gh/homarr-labs/dashboard-icons@main/svg/${icon}.svg`;
const delay = Math.min(index * 0.05, 0.5);
const displayName = name.charAt(0).toUpperCase() + name.slice(1);
---

<article
  class="template-card card animate-fade-in"
  style={`animation-delay: ${delay}s; opacity: 0;`}
  data-category={category}
  data-name={name.toLowerCase()}
  data-description={description.toLowerCase()}
  data-template={templateData}
  role="button"
  tabindex="0"
>
  <div class="card-body">
    <!-- Header: Icon + Title -->
    <div class="card-header">
      <div class="app-icon">
        <img
          src={iconUrl}
          alt=""
          loading="lazy"
          onerror="this.style.display='none';this.nextElementSibling.style.display='flex'"
        />
        <!-- Fallback Icon -->
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 256 256" fill="currentColor" style="display: none;">
          <path d="M216,72H56a8,8,0,0,1,0-16H192a8,8,0,0,0,0-16H56A24,24,0,0,0,32,64V192a24,24,0,0,0,24,24H216a16,16,0,0,0,16-16V88A16,16,0,0,0,216,72Zm0,128H56a8,8,0,0,1-8-8V86.63A23.84,23.84,0,0,0,56,88H216Z" />
        </svg>
      </div>

      <div class="flex-1" style="min-width: 0;">
        <div class="flex items-center gap-2 mb-1">
          <h3 class="card-title truncate">{displayName}</h3>
          <span class="badge badge-success">v{version}</span>
        </div>
        <div class="flex flex-wrap gap-2">
          <span class="tag">{base_os}</span>
          <span class="tag">amd64</span>
        </div>
      </div>
    </div>

    <!-- Description -->
    <p class="card-description line-clamp-2">{description}</p>

    <!-- Specs -->
    <div class="specs-grid">
      <div class="spec">
        <div class="spec-value">{memory_min >= 1024 ? `${memory_min / 1024}GB` : `${memory_min}MB`}</div>
        <div class="spec-label">Memory</div>
      </div>
      <div class="spec">
        <div class="spec-value">{disk_min}</div>
        <div class="spec-label">Disk</div>
      </div>
      <div class="spec">
        <div class="spec-value">{cores}</div>
        <div class="spec-label">{cores === 1 ? "Core" : "Cores"}</div>
      </div>
    </div>

    <!-- Actions -->
    <div class="card-actions flex gap-2 mt-4">
      <button class="btn btn-primary flex-1 view-details-btn">
        <!-- Info Icon -->
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 256 256" fill="currentColor" style="width: 16px; height: 16px;">
          <path d="M128,24A104,104,0,1,0,232,128,104.11,104.11,0,0,0,128,24Zm0,192a88,88,0,1,1,88-88A88.1,88.1,0,0,1,128,216Zm16-40a8,8,0,0,1-8,8,16,16,0,0,1-16-16V128a8,8,0,0,1,0-16,16,16,0,0,1,16,16v40A8,8,0,0,1,144,176ZM112,84a12,12,0,1,1,12,12A12,12,0,0,1,112,84Z" />
        </svg>
        Details
      </button>
    </div>
  </div>
</article>

<style>
  .card-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--text-dark);
  }

  [data-theme="dark"] .card-title {
    color: var(--text-primary);
  }

  .card-description {
    font-size: 0.875rem;
    color: var(--text-dark-secondary);
    line-height: 1.6;
    margin-bottom: 16px;
  }

  [data-theme="dark"] .card-description {
    color: var(--text-secondary);
  }

  .card-actions {
    margin-top: auto;
  }
</style>
