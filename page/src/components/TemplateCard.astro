---
interface Props {
  name: string;
  description: string;
  category: string;
  icon: string;
  version: string;
  build_version: number;
  base_os: string;
  memory_min: number;
  disk_min: string;
  cores: number;
  index?: number;
  templateData: string;
}

const {
  name,
  description,
  category,
  icon,
  version,
  build_version,
  base_os,
  memory_min,
  disk_min,
  cores,
  index = 0,
  templateData,
} = Astro.props;

const iconUrlSvg = `https://cdn.jsdelivr.net/gh/homarr-labs/dashboard-icons@main/svg/${icon}.svg`;
const iconUrlPng = `https://cdn.jsdelivr.net/gh/homarr-labs/dashboard-icons@main/png/${icon}.png`;
const delay = Math.min(index * 0.05, 0.5);
const displayName = name.charAt(0).toUpperCase() + name.slice(1);

// Capitalize category for display
const categoryDisplay = category.charAt(0).toUpperCase() + category.slice(1);
---

<article
  class="app-card animate-fade-in"
  style={`animation-delay: ${delay}s; opacity: 0;`}
  data-category={category}
  data-name={name.toLowerCase()}
  data-description={description.toLowerCase()}
  data-template={templateData}
  role="button"
  tabindex="0"
>
  <!-- Header: Icon + Title -->
  <div class="app-card-header">
    <div class="app-icon">
      <img
        src={iconUrlSvg}
        alt=""
        loading="lazy"
        data-png-fallback={iconUrlPng}
        onerror="if(this.dataset.pngFallback){this.onerror=()=>{this.style.display='none';this.nextElementSibling.style.display='flex'};this.src=this.dataset.pngFallback;delete this.dataset.pngFallback}else{this.style.display='none';this.nextElementSibling.style.display='flex'}"
      />
      <!-- Fallback Icon -->
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 256 256" fill="currentColor" style="display: none;">
        <path d="M216,72H56a8,8,0,0,1,0-16H192a8,8,0,0,0,0-16H56A24,24,0,0,0,32,64V192a24,24,0,0,0,24,24H216a16,16,0,0,0,16-16V88A16,16,0,0,0,216,72Zm0,128H56a8,8,0,0,1-8-8V86.63A23.84,23.84,0,0,0,56,88H216Z" />
      </svg>
    </div>

    <div class="app-info">
      <div class="app-name">
        {displayName}
        <span class="app-version">{version}</span>
      </div>
      <div class="app-category">{categoryDisplay}</div>
    </div>
  </div>

  <!-- Description -->
  <p class="app-description">{description}</p>

  <!-- Footer: Stats + Button -->
  <div class="app-footer">
    <div class="app-stats">
      <div class="app-stat">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 256 256" fill="currentColor">
          <path d="M128,136H48a8,8,0,0,1,0-16h80a8,8,0,0,1,0,16Z" />
        </svg>
        {memory_min >= 1024 ? `${memory_min / 1024}GB` : `${memory_min}MB`}
      </div>
      <div class="app-stat">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 256 256" fill="currentColor">
          <path d="M216,72H56a8,8,0,0,1,0-16H192a8,8,0,0,0,0-16H56A24,24,0,0,0,32,64V192a24,24,0,0,0,24,24H216a16,16,0,0,0,16-16V88A16,16,0,0,0,216,72Z" />
        </svg>
        {disk_min}
      </div>
    </div>
    <button class="btn-install">Details</button>
  </div>
</article>
