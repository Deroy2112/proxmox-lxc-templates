---
import ThemeToggle from "./ThemeToggle.astro";

interface Category {
  name: string;
  label: string;
  icon: string;
  count?: number;
}

interface Props {
  categories?: Category[];
  activeCategory?: string;
  class?: string;
}

const { categories = [], activeCategory = "all", class: className = "" } = Astro.props;
const basePath = import.meta.env.BASE_URL;
---

<aside class={`sidebar ${className}`}>
  <div class="sidebar-content">
    <!-- Logo -->
    <a href={basePath} class="flex items-center gap-3 px-4 py-3 mb-6">
      <div class="icon-box icon-box-sm" style="--icon-color: var(--color-accent);">
        <img src={`${basePath}favicon.svg`} alt="" class="w-6 h-6" />
      </div>
      <div>
        <div class="font-semibold text-[var(--text-primary)]">Proxmox LXC</div>
        <div class="text-xs text-[var(--text-muted)]">Templates</div>
      </div>
    </a>

    <!-- Search -->
    <div class="px-4 mb-6">
      <div class="relative">
        <svg
          class="absolute left-3 top-1/2 -translate-y-1/2 w-4 h-4 text-[var(--text-muted)]"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
        >
          <circle cx="11" cy="11" r="8"></circle>
          <path d="m21 21-4.35-4.35"></path>
        </svg>
        <input
          type="search"
          id="search-input"
          placeholder="Search templates..."
          class="w-full pl-10 pr-4 py-2 rounded-lg bg-[var(--bg-tertiary)] border border-[var(--border-color)] text-sm placeholder:text-[var(--text-muted)] focus:outline-none focus:border-[var(--color-accent)] transition-colors"
        />
      </div>
    </div>

    <!-- Categories -->
    <nav class="px-2 mb-6">
      <div class="px-2 mb-2 text-xs font-medium uppercase tracking-wider text-[var(--text-muted)]">
        Categories
      </div>
      <a
        href={basePath}
        class:list={["nav-item", { active: activeCategory === "all" }]}
        data-category="all"
      >
        <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
          <path d="M4 8h4V4H4v4zm6 12h4v-4h-4v4zm-6 0h4v-4H4v4zm0-6h4v-4H4v4zm6 0h4v-4h-4v4zm6-10v4h4V4h-4zm-6 4h4V4h-4v4zm6 6h4v-4h-4v4zm0 6h4v-4h-4v4z"/>
        </svg>
        <span>All Templates</span>
        <span class="nav-item-count" data-count="all">0</span>
      </a>

      {categories.map((cat) => (
        <a
          href={`${basePath}?category=${cat.name}`}
          class:list={["nav-item", { active: activeCategory === cat.name }]}
          data-category={cat.name}
        >
          <span
            class="w-5 h-5 rounded flex items-center justify-center text-white text-xs"
            style={`background-color: var(--color-cat-${cat.name})`}
          >
            {cat.label.charAt(0)}
          </span>
          <span>{cat.label}</span>
          <span class="nav-item-count" data-count={cat.name}>{cat.count || 0}</span>
        </a>
      ))}
    </nav>

    <!-- Links -->
    <nav class="px-2 mb-6">
      <div class="px-2 mb-2 text-xs font-medium uppercase tracking-wider text-[var(--text-muted)]">
        Resources
      </div>
      <a href={`${basePath}docs/`} class="nav-item">
        <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
          <path d="M14 2H6c-1.1 0-1.99.9-1.99 2L4 20c0 1.1.89 2 1.99 2H18c1.1 0 2-.9 2-2V8l-6-6zm2 16H8v-2h8v2zm0-4H8v-2h8v2zm-3-5V3.5L18.5 9H13z"/>
        </svg>
        <span>Documentation</span>
      </a>
      <a
        href="https://github.com/Deroy2112/proxmox-lxc-templates"
        target="_blank"
        rel="noopener noreferrer"
        class="nav-item"
      >
        <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
        <span>GitHub</span>
        <svg class="w-3 h-3 ml-auto opacity-50" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
          <polyline points="15 3 21 3 21 9"></polyline>
          <line x1="10" y1="14" x2="21" y2="3"></line>
        </svg>
      </a>
    </nav>

    <!-- Theme Toggle -->
    <div class="mt-auto px-4 pb-4">
      <ThemeToggle />
    </div>
  </div>
</aside>

<style>
  .sidebar {
    position: fixed;
    top: 0;
    left: 0;
    width: var(--sidebar-width);
    height: 100vh;
    background: var(--glass-bg-solid);
    border-right: 1px solid var(--border-color);
    z-index: 40;
    overflow: hidden;
  }

  .sidebar-content {
    display: flex;
    flex-direction: column;
    height: 100%;
    overflow-y: auto;
    padding-top: 1rem;
  }

  .nav-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.625rem 0.75rem;
    margin: 0.125rem 0;
    border-radius: 0.5rem;
    color: var(--text-secondary);
    transition: all 150ms ease;
  }

  .nav-item:hover {
    background-color: var(--bg-tertiary);
    color: var(--text-primary);
  }

  .nav-item.active {
    background-color: var(--color-accent-light);
    color: var(--color-accent);
  }

  .nav-item-count {
    margin-left: auto;
    padding: 0.125rem 0.5rem;
    border-radius: 9999px;
    font-size: 0.75rem;
    font-weight: 500;
    background-color: var(--bg-tertiary);
    color: var(--text-muted);
  }

  .nav-item.active .nav-item-count {
    background-color: var(--color-accent);
    color: white;
  }

  /* Hide on mobile - controlled by MobileMenu */
  @media (max-width: 768px) {
    .sidebar {
      transform: translateX(-100%);
      transition: transform 300ms ease;
    }

    .sidebar.open {
      transform: translateX(0);
    }
  }
</style>
