---
import ThemeToggle from "./ThemeToggle.astro";

interface Category {
  name: string;
  label: string;
  count?: number;
}

interface Props {
  categories?: Category[];
  activeCategory?: string;
  totalCount?: number;
}

const { categories = [], activeCategory = "all", totalCount = 0 } = Astro.props;
const basePath = import.meta.env.BASE_URL;
---

<aside class="bg-base-200 w-64 min-h-full flex flex-col">
  <!-- Logo -->
  <a href={basePath} class="flex items-center gap-3 px-4 py-4">
    <div class="avatar placeholder">
      <div class="bg-primary text-primary-content rounded-lg w-10">
        <img src={`${basePath}favicon.svg`} alt="" class="w-6 h-6" />
      </div>
    </div>
    <div>
      <div class="font-bold text-base-content">Proxmox LXC</div>
      <div class="text-xs text-base-content/60">Templates</div>
    </div>
  </a>

  <!-- Search -->
  <div class="px-4 pb-4">
    <label class="input input-bordered flex items-center gap-2">
      <svg class="w-4 h-4 opacity-70" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <circle cx="11" cy="11" r="8"></circle>
        <path d="m21 21-4.35-4.35"></path>
      </svg>
      <input
        type="search"
        id="search-input"
        class="grow"
        placeholder="Search..."
      />
    </label>
  </div>

  <!-- Categories Menu -->
  <ul class="menu px-2 flex-1">
    <li class="menu-title">Categories</li>
    <li>
      <a
        href={basePath}
        class:list={[{ active: activeCategory === "all" }]}
        data-category="all"
      >
        <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
          <path d="M4 8h4V4H4v4zm6 12h4v-4h-4v4zm-6 0h4v-4H4v4zm0-6h4v-4H4v4zm6 0h4v-4h-4v4zm6-10v4h4V4h-4zm-6 4h4V4h-4v4zm6 6h4v-4h-4v4zm0 6h4v-4h-4v4z"/>
        </svg>
        All Templates
        <span class="badge badge-sm" data-count="all">{totalCount}</span>
      </a>
    </li>

    {categories.map((cat) => (
      <li>
        <a
          href={`${basePath}?category=${cat.name}`}
          class:list={[{ active: activeCategory === cat.name }]}
          data-category={cat.name}
        >
          <span class="badge badge-sm badge-primary">{cat.label.charAt(0)}</span>
          {cat.label}
          <span class="badge badge-sm badge-ghost" data-count={cat.name}>{cat.count || 0}</span>
        </a>
      </li>
    ))}

    <li class="menu-title mt-4">Resources</li>
    <li>
      <a href={`${basePath}docs/`}>
        <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
          <path d="M14 2H6c-1.1 0-1.99.9-1.99 2L4 20c0 1.1.89 2 1.99 2H18c1.1 0 2-.9 2-2V8l-6-6zm2 16H8v-2h8v2zm0-4H8v-2h8v2zm-3-5V3.5L18.5 9H13z"/>
        </svg>
        Documentation
      </a>
    </li>
    <li>
      <a href="https://github.com/Deroy2112/proxmox-lxc-templates" target="_blank" rel="noopener noreferrer">
        <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
        GitHub
        <svg class="w-3 h-3 opacity-50" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
          <polyline points="15 3 21 3 21 9"></polyline>
          <line x1="10" y1="14" x2="21" y2="3"></line>
        </svg>
      </a>
    </li>
  </ul>

  <!-- Theme Toggle -->
  <div class="p-4 border-t border-base-300">
    <ThemeToggle class="hidden lg:flex" />
  </div>
</aside>
