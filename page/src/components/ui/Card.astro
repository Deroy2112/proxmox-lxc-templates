---
interface Props {
  href?: string;
  class?: string;
  hover?: boolean;
  glass?: boolean;
}

const {
  href,
  class: className = "",
  hover = true,
  glass = true,
} = Astro.props;

const classes = `
  card
  ${glass ? "glass" : "bg-base-100"}
  ${hover ? "hover:shadow-xl transition-shadow" : ""}
  ${className}
`.trim();
---

{href ? (
  <a href={href} class={classes}>
    <div class="card-body">
      <slot />
    </div>
  </a>
) : (
  <div class={classes}>
    <div class="card-body">
      <slot />
    </div>
  </div>
)}
