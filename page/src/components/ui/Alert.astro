---
interface Props {
  type?: "info" | "warning" | "success" | "error";
  class?: string;
}

const { type = "info", class: className = "" } = Astro.props;

const typeClasses = {
  info: "alert-info",
  warning: "alert-warning",
  success: "alert-success",
  error: "alert-error",
};

const classes = `alert ${typeClasses[type]} ${className}`.trim();
---

<div class={classes} role="alert">
  <slot />
</div>
