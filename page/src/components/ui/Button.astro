---
interface Props {
  variant?: "primary" | "secondary" | "ghost";
  size?: "sm" | "md" | "lg";
  href?: string;
  type?: "button" | "submit" | "reset";
  disabled?: boolean;
  class?: string;
}

const {
  variant = "primary",
  size = "md",
  href,
  type = "button",
  disabled = false,
  class: className = "",
} = Astro.props;

const sizeClasses = {
  sm: "btn-sm",
  md: "",
  lg: "btn-lg",
};

const variantClasses = {
  primary: "btn-primary",
  secondary: "btn-secondary btn-outline",
  ghost: "btn-ghost",
};

const classes = `btn ${sizeClasses[size]} ${variantClasses[variant]} ${className}`.trim();
---

{href ? (
  <a href={href} class={classes}>
    <slot />
  </a>
) : (
  <button type={type} disabled={disabled} class={classes}>
    <slot />
  </button>
)}
